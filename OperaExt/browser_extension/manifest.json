{
  "manifest_version": 3,
  "name": "Translate text",
  "version": "1.0",
  "description": "Translate text and add in BD",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}